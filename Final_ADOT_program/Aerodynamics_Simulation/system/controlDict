FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     foamRun;

solver          incompressibleFlow;

startFrom       startTime;

startTime       0;

endTime         0.3;

deltaT          0.001;

writeControl    timeStep;

writeInterval   2;

purgeWrite      0;

writeFormat     binary;

writePrecision  10;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

functions
{

mag1
{
    type            mag;
    libs            ("libfieldFunctionObjects.so");

    
    // Mandatory (inherited) entries (runtime modifiable)
    field           U;

    // Optional (inherited) entries
    result          magU;
    enabled         true;
    writeControl    outputTime;
    writeFormat     binary;
    writeInterval   1;
}

tailUpstreamVelocity
{

    type            volFieldValue;
    libs            ("libfieldFunctionObjects.so");

    regionType      zone;
    cellZone        upstreamTailZone;
    operation       volAverage;

    fields          (magU);

    log             true;
    writeControl    outputTime;
    writeFormat     ascii;
    writeInterval   1;
    writeFields     yes;

  }

  #include "forces"

}


