FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nuTilda;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "initialConditions"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform $waveNumber;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $waveNumber;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform $waveNumber;
        value           uniform $waveNumber;
    }
    lowerWall
    {
        type            symmetryPlane;
    }
    aircraftModel
    {
        type            fixedValue;
        value           uniform 0;
    }
    upperWall
    {
        type            symmetryPlane;
    }
    "(front|back)"
    {
        type            symmetryPlane;
    }
    "proc.*"
    {
        type            processor;
    }
}
