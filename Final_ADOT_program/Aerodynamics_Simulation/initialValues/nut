FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "initialConditions"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    front
    {
        type            zeroGradient;
    }
    back
    {
        type            zeroGradient;
    }
    inlet
    {
        type            calculated;
        value           uniform 0;
    }
    outlet
    {
        type            calculated;
        value           uniform 0;
    }
    upper
    {
        type            zeroGradient;
    }
    lower
    {
        type            zeroGradient;
    }
    aircraftModel
    {
        type            nutkWallFunction;
        value           uniform 0;
        Ks              $surfaceRoughnessHeight;
        Cs              0.5;
    }
    horizontalStabiliser
    {
        type            nutkWallFunction;
        value           uniform 0;
        Ks              $surfaceRoughnessHeight;
        Cs              0.5;
    }
    
    "proc.*"
    {
        type            processor;
    }
}


