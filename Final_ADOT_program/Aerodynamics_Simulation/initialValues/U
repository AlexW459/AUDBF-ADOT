FoamFile
{
    format      binary;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "initialConditions";

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $flowVelocity;
    }
    outlet
    {
        type            zeroGradient;
        value           uniform 0;
    }

    aircraftModel
    {
        type            noSlip;
    }

    lowerWall
    {
        type            symmetryPlane;
    }

    upperWall
    {
        type            symmetryPlane;
    }

    "(front|back)"
    {
        type            symmetryPlane;
    }

    "proc.*"
    {
        type            processor;
    }
}


// ************************************************************************* //
