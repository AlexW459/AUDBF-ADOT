FoamFile
{
    format      ascii;
    class       volScalarField;
    object      k;
    location    "0";
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "initialConditions"


dimensions      [0 2 -2 0 0 0 0];

internalField uniform $turbulentEnergy;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform $turbulentEnergy;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      uniform $turbulentEnergy;
        value           uniform $turbulentEnergy;
    }

    upper
    {
        type            inletOutlet;
        inletValue      uniform $turbulentEnergy;
        value           uniform $turbulentEnergy;
    }

    lower
    {
        type            inletOutlet;
        inletValue      uniform $turbulentEnergy;
        value           uniform $turbulentEnergy;
    }

    front
    {
        type            inletOutlet;
        inletValue      uniform $turbulentEnergy;
        value           uniform $turbulentEnergy;
    }

    back
    {
        type            inletOutlet;
        inletValue      uniform $turbulentEnergy;
        value           uniform $turbulentEnergy;
    }

    aircraftModel
    {
        type            kqRWallFunction;
        value           uniform $turbulentEnergy;
    }

    horizontalStabiliser
    {
        type            kqRWallFunction;
        value           uniform $turbulentEnergy;
    }
}


// ************************************************************************* //
